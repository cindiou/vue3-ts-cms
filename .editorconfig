root = true

[*]		# 表示所有文件都适用
charset = utf-8
indent_style = space	# 缩进风格(tab | space)
indent_size = 2		# 缩进大小
end_of_line = lf	# 控制换行类型(lf | cr | crlf)
trim_trailing_whitespace = true		# 去除行首的空白字符
insert_final_newline = true		# 始终在文件末尾插入一个新行


[*.md]		# 表示以下配置仅针对.md文件生效
max_line_length = off
trim_trailing_whitespace = false